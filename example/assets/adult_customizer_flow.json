{
    "id": "onboarding_flow",
    "type": "navigable",
    "initialValues": {
        "first_name": "",
        "last_name": "",
        "email": "",
        "password": "",
        "favorite_books": "",
        "age": "0"
    },
    "steps": [
        {
            "stepIdentifier": {
                "id": "q1"
            },
            "type": "question",
            "relatedParameter": "first_name",
            "title": "What is your first name?",
            "infoTitle": "First name",
            "infoText": "This will be visible on your published audiobook. In the format, e.g. 'John D.",          
            "answerFormat": {
                "type": "text",
                "lines": 1
            }
        },
        {
            "stepIdentifier": {
                "id": "q2"
            },
            "type": "question",
            "relatedParameter": "last_name",
            "title": "What is your last name?",
            "infoTitle": "Last name",
            "infoText": "This will be visible on your published audiobook. In the format, e.g. 'John D.", 
            "answerFormat": {
                "type": "text",
                "lines": 1
            }
        },
        {
            "stepIdentifier": {
                "id": "q3"
            },
            "type": "question",
            "isOptional": true,
            "relatedParameter": "age",
            "title": "How old are you?",
            "answerFormat": {
                "type": "integer",
                "minimumValue": 0,
                "maximumValue": 100
            }
        },
        {
            "stepIdentifier": {
                "id": "q4"
            },
            "type": "question",
            "relatedParameter": "email",
            "title": "What is your email?",
            "answerFormat": {
                "type": "text",
                "lines": 1
            }
        },
        {
            "stepIdentifier": {
                "id": "q5"
            },
            "type": "question",
            "relatedParameter": "password",
            "title": "Create a password",
            "answerFormat": {
                "type": "password",
                "maxLines": 1
            }
        },
        {
            "stepIdentifier": {
                "id": "q6"
            },
            "type": "question",
            "relatedParameter": "favorite_books",
            "title": "What are some of your favorite books?",
            "text": "If you can't think of any, just leave it empty.",
            "answerFormat": {
                "type": "text",
                "maxLines": 3,
                "hint": "Eg: Harry Potter, The Lord of the Rings, The Great Gatsby"
            }
        },
        {
            "stepIdentifier": {
                "id": "q7"
            },
            "type": "question",
            "relatedParameter": "heard_from",
            "title": "How did you hear about us?",
            "answerFormat": {
                "type": "single",
                "textChoices": [
                    {
                        "text": "I saw an ad",
                        "value": "ad"
                    },
                    {
                        "text": "Social media",
                        "value": "social_media"
                    },
                    {
                        "text": "App store",
                        "value": "app_store"
                    },
                    {
                        "text": "Friends/family told me",
                        "value": "word_of_mouth"
                    },
                    {
                        "text": "Other",
                        "value": "other"
                    }
                ],
                "dynamicTextChoices": "",
                "buttonChoices": [],
                "dynamicImageChoices": "",
                "dynamicCharacterNames": ""
            }
        },
        {
            "stepIdentifier": {
                "id": "q8"
            },
            "type": "question",
            "isOptional": false,
            "title": "Terms and Conditions",
            "answerFormat": {
                "type": "agreement",
                "defaultValue": "NEGATIVE",
                "markdownDescription": "Please read our [Terms and Conditions](https://www.kuluko.com/terms) and confirm your acceptance by checking the box below.",
                "markdownAgreementText": "I have read and accept the [Terms and Conditions](https://www.kuluko.com/terms) of Kuluko."
            }
        },
        {
            "stepIdentifier": {
                "id": "q9"
            },
            "type": "completion",
            "title": "All set!",
            "text": "Finish to create your account and access all the features of Kuluko.",
            "buttonText": "Finish",
            "parameters": {
                "first_name": "$first_name",
                "last_name": "$last_name",
                "age": "$age",
                "email": "$email",
                "password": "$password",
                "favorite_books": "$favorite_books",
                "heard_from": "$heard_from"
            }, 
            "requestType": "POST",
            "endpointUrl": "https://kuluko.com/api/users/create"
        }
    ]
}
